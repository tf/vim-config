
set nocompatible
filetype indent plugin on
syntax on

set hidden
set wildmenu
set showcmd
set hlsearch

set ignorecase
set smartcase

set autoindent
set nostartofline
set ruler
set laststatus=2
set confirm
set cmdheight=1

set expandtab
set shiftwidth=2
set softtabstop=2

" temp files

set backup
set backupdir=~/.vim/backup
set directory=~/.vim/tmp

" folding settings

set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=1
